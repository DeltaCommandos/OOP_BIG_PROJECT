@model OOP_BIG_PROJECT.ViewModels.UserViewModel



 <div class="login1">

    <form class="p-4 p-md-5 bg-body-tertiary">
        <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">Вход</h1>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" asp-for="User.Username">
            <label for="floatingInput">Никнейм</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="floatingPassword" asp-for="User.Password">
            <label for="floatingPassword">Пароль</label>
        </div>

        <hr class="my-4">

        <button class="w-100 btn btn-lg btn-warning" type="submit">Войти</button>
@*         <small class="text-body-secondary">By clicking Sign up, you agree to the terms of use.</small>
 *@
        <hr class="my-4">

        <a asp-controller="Home" asp-action="Register" type="text">
            Зарегистрироваться
            </a>

    </form>
</div>




