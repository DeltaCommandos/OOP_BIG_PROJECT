@model OOP_BIG_PROJECT.ViewModels.FighterViewModel



<div class="tinder1">
    <form asp-controller="Match" asp-action="Back" method="post">
        <button type="submit" name="fighterId" value="@Model.SelectedFighter.Id" class="boba">
            <svg xmlns="http://www.w3.org/2000/svg" width="46" height="36" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16" style="color:white">
                <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
            </svg>
         </button>
    </form>
 
    <form asp-action="Index" class="p-4 p-md-5 bg-body-tertiary">
        @if (Model.SelectedFighter != null)
        {

            <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">
@*                 @if(Model.)
 *@                @Model.SelectedFighter.Name
            </h1>

            @if (!Model.SelectedFighter.Sex)
            {
                <p class="col-lg-8 mx-auto fs-5 text-start" style="color:white">
                    мужчина - @Model.SelectedFighter.Age
                </p>
            }
            else
            {
                <p class="col-lg-8 mx-auto fs-5 text-start" style="color:white">
                    женщина - @Model.SelectedFighter.Age
                </p>
            }

            <hr class="my-4">

            <div class="scroll_t">
                <p class="col-lg-8 mx-auto fs-5" style="color:white">
                    @Model.SelectedFighter.Skills
                </p>
            </div>

            <hr class="my-4">
        }
        else
        {
            <p>Выбранный боец не найден.</p>
        }
    </form>
    
    <div class="text-center">

        <div class="d-inline-flex gap-2 mb-5">
            <form asp-controller="Match" asp-action="Like" method="post">
                <button type="submit" name="fighterId" value="@Model.SelectedFighter.Id" class="d-inline-flex align-items-center btn btn-success btn-lg px-4 rounded-pill">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
                        <path d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a10 10 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733q.086.18.138.363c.077.27.113.567.113.856s-.036.586-.113.856c-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.2 3.2 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.8 4.8 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z" />
                    </svg>
                    <svg class="bi ms-2" width="50" height="50"><use xlink:href="#arrow-right-short"></use></svg>
                </button>
            </form>

            <form asp-controller="Match" asp-action="Dislike" method="post">
                <button type="submit" name="fighterId" value="@Model.SelectedFighter.Id" class="d-inline-flex align-items-center btn btn-lg px-4 rounded-pill red">
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-hand-thumbs-down-fill" viewBox="0 0 16 16">
                        <path d="M6.956 14.534c.065.936.952 1.659 1.908 1.42l.261-.065a1.38 1.38 0 0 0 1.012-.965c.22-.816.533-2.512.062-4.51q.205.03.443.051c.713.065 1.669.071 2.516-.211.518-.173.994-.68 1.2-1.272a1.9 1.9 0 0 0-.234-1.734c.058-.118.103-.242.138-.362.077-.27.113-.568.113-.856 0-.29-.036-.586-.113-.857a2 2 0 0 0-.16-.403c.169-.387.107-.82-.003-1.149a3.2 3.2 0 0 0-.488-.9c.054-.153.076-.313.076-.465a1.86 1.86 0 0 0-.253-.912C13.1.757 12.437.28 11.5.28H8c-.605 0-1.07.08-1.466.217a4.8 4.8 0 0 0-.97.485l-.048.029c-.504.308-.999.61-2.068.723C2.682 1.815 2 2.434 2 3.279v4c0 .851.685 1.433 1.357 1.616.849.232 1.574.787 2.132 1.41.56.626.914 1.28 1.039 1.638.199.575.356 1.54.428 2.591" />
                    </svg>
                    <svg class="bi ms-2" width="50" height="50"><use xlink:href="#arrow-right-short"></use></svg>
                </button>
            </form>
        </div>
    </div>
</div>
