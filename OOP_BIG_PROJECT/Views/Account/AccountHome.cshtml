@model OOP_BIG_PROJECT.ViewModels.UserViewModel

<div class="home1">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
        <img class="logo" src="https://i.ibb.co/wYqgFx9/duel11.png" alt="duel11" border="0" width="240" height="100">
        <hr class="my-4">

        <div class="ArButs">
            <div class="d-inline-flex gap-2 mb-5">
                <a asp-controller="Account" asp-action="ChangeLoginAndPassword" class="d-inline-flex align-items-center btn btn-success btn-lg px-4 rounded-pill" type="button">
                    <div class="search">Изменить информацию о пользователе</div>
                    <svg class="bi ms-2" width="100" height="50"><use xlink:href="#arrow-right-short"></use></svg>
                </a>
            </div>
        </div>

        <div class="ArButs">
            <div class="d-inline-flex gap-2 mb-5">
                <a asp-controller="Account" asp-action="ViewMatches" class="d-inline-flex align-items-center btn btn-success btn-lg px-4 rounded-pill" type="button">
                    <div class="search">Посмотреть свои матчи</div>
                    <svg class="bi ms-2" width="100" height="50"><use xlink:href="#arrow-right-short"></use></svg>
                </a>
            </div>
        </div>
    </div>
</div>