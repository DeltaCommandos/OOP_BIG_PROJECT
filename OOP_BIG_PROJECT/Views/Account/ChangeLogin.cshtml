@model OOP_BIG_PROJECT.ViewModels.UserViewModel

<h1>Изменение логина</h1>

<form asp-action="ChangeLogin" method="post">
    <div class="form-group">
        <label asp-for="Username">Новый логин:</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Изменить логин</button>
</form>

<form asp-action="Back" method="post">
    <button type="submit" class="btn btn-primary">Назад</button>
</form>